#:kivy 2.0

<AppBoxLayout>:
    img_stickguy: img_stickguy
    img_numberline: img_numberline
    label_rem_guesses: label_rem_guesses

    md_bg_color: app.theme_cls.primary_light
    orientation: 'vertical'

    MDBoxLayout:
        # Top section: 2 images.
        adaptive_height: True
        md_bg_color: app.theme_cls.primary_light
        size_hint: 1, 0.8
        padding: [40]

        Image:
            id: img_stickguy
            source: root.stickguy
        Image:
            id: img_numberline
            source: 'data/last_numberline.png'

    MDLabel:
        # Remaining guesses.
        id: label_rem_guesses
        text: ''
        halign: 'center'
        theme_text_color: 'ContrastParentBackground'
        font_style: 'Body1'
        size_hint: 1, 0.05

    MDBoxLayout:
        # Bottom section: 3 buttons.
        md_bg_color: app.theme_cls.primary_light
        size_hint: 1, 0.15
        #padding: [10]
        spacing: 10

        MDLabel:
            # Spacer.
            size_hint: 0.25, 1
        MDBoxLayout:
            # Buttons.
            spacing: 5
            size_hint: 0.5, 1
            md_bg_color: app.theme_cls.primary_light

            MDIconButton:
                #adaptive_width: True
                user_font_size: '64sp'
                #size_hint: 0.67, 1
                icon: 'data/icon/check-circle.png'
                on_release: root.handle_check_clicked(self)
            MDBoxLayout:
                #spacing: 5
                orientation: 'vertical'
                size_hint: 0.33, 1
                MDIconButton:
                    icon: 'data/icon/up-circle.png'
                    on_release: root.handle_higher_clicked(self)
                MDIconButton:
                    icon: 'data/icon/down-circle.png'
                    on_release: root.handle_lower_clicked(self)
        MDLabel:
            # Spacer.
            size_hint: 0.25, 1

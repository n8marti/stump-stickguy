#:kivy 2.0

<AppBoxLayout>:
    img_stickguy: img_stickguy
    img_numberline: img_numberline
    label_rem_guesses: label_rem_guesses

    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'

    BoxLayout:
        # Top section: 2 images.
        adaptive_height: True
        size_hint: 1, 0.8
        padding: [20]

        Image:
            id: img_stickguy
            source: root.stickguy
        Image:
            id: img_numberline
            source: 'data/last_numberline.png'

    Label:
        # Remaining guesses.
        id: label_rem_guesses
        color: [0, 0, 0, 1]
        text: ''
        halign: 'center'
        font_style: 'Body1'
        size_hint: 1, 0.05

    BoxLayout:
        # Bottom section: 3 buttons.
        size_hint: 1, 0.15
        #padding: [10]
        spacing: 10

        Label:
            # Spacer.
            size_hint: 0.25, 1
        BoxLayout:
            # Buttons.
            spacing: 5
            size_hint: 0.5, 1

            MyButton:
                # user_font_size: '64sp'
                #size_hint: 0.67, 1
                img_src: 'data/icon/check-circle.png'
                on_release: root.handle_check_clicked(self)

            BoxLayout:
                #spacing: 5
                orientation: 'vertical'
                size_hint: 0.33, 1
                MyButton:
                    img_src: 'data/icon/up-circle.png'
                    on_release: root.handle_higher_clicked(self)

                MyButton:
                    img_src: 'data/icon/down-circle.png'
                    on_release: root.handle_lower_clicked(self)
        Label:
            # Spacer.
            size_hint: 0.25, 1


# Define background color template.
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

# Combine BackgroundColor with regular widget to create custom widget.
<MyButton@Button+BackgroundColor>
    # Default background color (r, g, b, a).
    background_color: 1, 1, 1, 0
    img_src: 'data/icon/check-circle.png'
    Image:
        source: root.img_src
        allow_stretch: False
        pos: self.parent.pos
        size: self.parent.width, self.parent.height
